---
export interface Props {
  title: string;
  description: string;
  image: string;
}

import SEO from "simple-astro-seo";

const { title, description, image } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.url);
const imageURL = new URL(image, Astro.url);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <SEO
      image={imageURL.href}
      title={title}
      description={description}
      url={canonicalURL.href}
      siteName="Ed Astro Playground"
      pageType="article"
      twitterHandle=""
    />
  </head>
  <body>
    <main>
      <div class="flex justify-between items-center mb-1">
        <h1>{title}</h1>
      </div>

      <p><i>{description}</i></p>

      <img src={image} alt={title} class="mt-3 rounded" />

      <div class="pt-4">
        <slot />
      </div>
    </main>
  </body>
</html>

<style is:global>
  * {
    line-height: 1.75;
  }
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 800;
    margin: 8px 0;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  ul {
    display: block;
    list-style-type: disc;
    margin-block-start: 1em;
    margin-block-end: 1em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    padding-left: 20px;
  }
  li {
    margin: 4px 0;
  }
  .astro-code {
    padding: 16px;
    border-radius: 8px;
    margin: 16px 0;
  }
</style>
